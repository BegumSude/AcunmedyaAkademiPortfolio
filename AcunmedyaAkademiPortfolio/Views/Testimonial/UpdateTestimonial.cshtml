@model AcunmedyaAkademiPortfolio.Models.TblTestimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Referans Güncelleme Sayfası</h2>
<form method="post">
    @Html.HiddenFor(x => x.TestimonialId)

    <label>İsim-Soyisim</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <span class="text-danger">@Html.ValidationMessageFor(x => x.Name)</span>
    <br />
    <label>Meslek</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <span class="text-danger">@Html.ValidationMessageFor(x => x.Title)</span>
    <br />
    <label>Yorum</label>
    @Html.TextBoxFor(x => x.Comment, new { @class = "form-control" })
    <span class="text-danger">@Html.ValidationMessageFor(x => x.Comment)</span>
    <br />
    <label>Fotoğraf </label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <span class="text-danger">@Html.ValidationMessageFor(x => x.ImageUrl)</span>
    <br />

    <button type="submit" class="btn btn-info">Güncelle</button>

</form>


