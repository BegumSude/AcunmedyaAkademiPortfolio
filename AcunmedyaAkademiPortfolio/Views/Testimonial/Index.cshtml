@model List<AcunmedyaAkademiPortfolio.Models.TblTestimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container">
    <h2>Referanslarım</h2>
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>İsim</th>
            <th>Meslek</th>
            <th>Yorum</th>
            <th>Fotoğraf</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.Name</td>
                <td>@item.Title</td>
                <td>@item.Comment</td>
                <td><img src="@item.ImageUrl" style="width:75px;height:75px"/></td>
                <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-info">Sil</a></td>
                <td><a href="/Testimonial/UpdateTestimonial//@item.TestimonialId" class="btn btn-info">Güncelle</a></td>
            </tr>
        }
    </table>

    <br />
    <a href="/Testimonial/AddTestimonial" class="btn btn-info">Yeni Referans Ekle</a>


</div>

