@model List<AcunmedyaAkademiPortfolio.Models.TblSocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="container">
    <h2>Sosyal Medya Hesaplarım</h2>
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Icon</th>
            <th>Platform</th>
            <th>Link</th>
            <th>Sil</th>
            <th>Güncelle</th>
            
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td><img src="@item.Icon" style="width:75px;height:75px" </td>
                <td>@item.Name</td>
                <td><a href="@item.Url" target="_blank">Hesap Linki</a></td>

                <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-info">Sil</a></td>
                <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-info">Güncelle</a></td>
            </tr>
        }
    </table>

    <br />
    <a href="/SocialMedia/AddSocialMedia" class="btn btn-info">Yeni Sosyal Medya Hesabı Ekle</a>


</div>



