@model AcunmedyaAkademiPortfolio.Models.TblSocialMedia
@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Sosyal Medya Hesabı Güncelleme Sayfası</h2>


<form method="post">
    @Html.HiddenFor(x => x.SocialMediaId)
    <label>Icon</label>
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
    <span class="text-danger">@Html.ValidationMessageFor(x => x.Icon)</span>
    <br />
    <label>Platform</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <span class="text-danger">@Html.ValidationMessageFor(x => x.Name)</span>
    <br />
    <label>Hesap Linki</label>
    @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
    <span class="text-danger">@Html.ValidationMessageFor(x => x.Url)</span>
    <br />
    

    <button class="btn btn-primary">Kaydet</button>

</form>



