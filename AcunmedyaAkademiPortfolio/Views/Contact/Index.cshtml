@model List<AcunmedyaAkademiPortfolio.Models.TblContact>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="container">
    <h2>İletişim Bilgileri</h2>
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Adres</th>
            <th>Telefon</th>
            <th>E-Mail Adresi</th>
            <th>Konum</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model) {
            count++;
        <tr>
            <th>@count</th>
            <td>@item.Adress</td>
            <td>@item.Phone</td>
            <td>@item.Email</td>
            <td>
                <a href="@item.MapUrl" target="_blank">Harita Linki</a>
            </td>
            <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-info">Sil</a></td>
            <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-info">Güncelle</a></td>
        </tr>
        }
    </table>

    <br />
    <a href="/Contact/AddContact" class="btn btn-info">Yeni İletişim Bilgisi Ekle</a>

    
</div>

