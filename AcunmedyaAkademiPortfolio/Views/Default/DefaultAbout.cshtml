@model List<AcunmedyaAkademiPortfolio.Models.TblAbout> 

@foreach (var item in Model)
{

<section id="about" class="about section">

    
    <div class="container section-title" data-aos="fade-up">
        <h1 style="color:#160b30">Hakkımda</h1>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center">
            <div class="col-lg-4">
               <img src="@item.ImageUrl" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 content">
                <br />
                <h1 style="color: #160b30">@item.Title</h1>
                <br />
                <br />
                <br />
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Doğum Tarihi:</strong> <span>30/05/2004</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@item.City</span></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>+90 5421101234</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>E-Posta:</strong> <span>@item.EMail</span></li>
                        </ul>
                    </div>
                </div>
                <p class="py-3">
                    <i class="bi bi-chevron-right"></i> <strong style="color: #160b30;">@item.Description</strong>
                </p>
<div class="bi-download-cv">
    <a href="@item.CVUrl" download class="btn btn-outline-dark">
        <i class="bi bi-chevron-right"></i> <strong>CV'mi indirmek için tıklayın!</strong><span></span>
        <i class="fa fa-download"></i>

    </a>
     </div>
                



            </div>
        </div>

    </div>

</section>
}
