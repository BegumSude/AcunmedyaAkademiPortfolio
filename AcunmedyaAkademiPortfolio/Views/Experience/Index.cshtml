@model List<AcunmedyaAkademiPortfolio.Models.TblExperience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="container">
    <h2>Deneyim Bilgileri</h2>
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Pozisyon</th>
            <th>Başlangıç Yılı</th>
            <th>Bitiş Yılı</th>
            <th>Şirket</th>
            <th>Açıklama</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.Title</td>
                <td>@item.StartYear</td>
                <td>@item.EndYear</td>
                <td>@item.Company</td>
                <td>@item.Description</td>
                <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-info">Sil</a></td>
                <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-info">Güncelle</a></td>
            </tr>
        }
    </table>

    <br />
    <a href="/Experience/AddExperience" class="btn btn-info">Yeni Deneyim Ekle</a>


</div>

